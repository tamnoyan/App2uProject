        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="textStart"
            android:paddingRight="5dp"
        android:textSize="18sp"
        android:text="@string/families_questions" />



    </ScrollView>


</FrameLayout>
