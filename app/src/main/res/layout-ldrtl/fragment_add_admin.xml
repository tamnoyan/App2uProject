<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddAdminFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/linearLayout3"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivEdit2"
                android:src="@drawable/ic_edit_24dp"
                android:layout_below="@+id/btnUpdateAdmin"
                android:layout_alignRight="@+id/etAdmin1"
                android:layout_alignEnd="@+id/etAdmin1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/etAdmin2"
                android:hint="admin2@mail.com"
                android:gravity="center|bottom" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivEdit3"
                android:src="@drawable/ic_edit_24dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/etAdmin3"
                android:hint="admin3@mail.com"
                android:textColorHighlight="@color/lightBrown"
                android:gravity="center|bottom" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivEdit4"
                android:src="@drawable/ic_edit_24dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/etAdmin4"
                android:hint="admin4@mail.com"
                android:textColorHighlight="@color/lightBrown"
                android:gravity="center|bottom" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/add_update_admins"

        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignRight="@+id/tvAdminTitle"
        android:layout_alignLeft="@+id/btnUpdateAdmin"
        android:layout_alignEnd="@+id/btnUpdateAdmin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:id="@+id/btnUpdateAdmin"
        android:textColor="#FFF"
        android:background="@color/lightGreen"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/tvAdmin1"
        android:hint="admin1@mail.com"
        android:textSize="18sp"
        android:textColor="@color/lightBrown"

        android:gravity="center"
        android:layout_below="@+id/tvAdminTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/admin"
        android:textColor="@color/lightBrown"
        android:textStyle="bold"
        android:id="@+id/tvAdminTitle"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnUpdateAdmin"
        android:layout_toStartOf="@+id/btnUpdateAdmin" />

</RelativeLayout>
